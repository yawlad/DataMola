{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 14,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-alert": "error",
    "camelcase": "error",
    "no-const-assign": "error",
    "no-extra-semi": "error",
    "no-mixed-spaces-and-tabs": "error",
    "no-undef": "error",
    "no-console": "warn",
    "no-unused-vars": "warn"
  }
}
